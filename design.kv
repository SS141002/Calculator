<Background>:
    MDNavigationLayout:
        Screen_Manager:
            MDScreen:
                MDNavigationRail:
                    MDNavigationRailItem:
                        text: "Standard"
                        icon: "calculator-variant"
                        on_press: 
                            scrmgr.current = "scr_std"

                    MDNavigationRailItem:
                        text: "Scientific"
                        icon: "language-javascript"
                        on_press: 
                            scrmgr.current = "scr_sci"

                    MDNavigationRailItem:
                        text: "Conversion"
                        icon: "language-javascript"
                        on_press: 
                            scrmgr.current = "scr_uni"

                Screen_Manager:
                    id: scrmgr
                    Standard:
                    Unit_Converter:
                    Scientific:

