<Background>:
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

    ActionBar:
        id: menubar
        pos_hint: {"y":0.9}
        size_hint: [1, 0.1]
        background_image: ""
        border:[0, 0, 0, 0]
        background_color: [0.7, 0.7, 0.7, 1]

        ActionView:
            ActionPrevious:
                markup: True
                with_previous: False
                title: "[b]Standard[/b]"
                app_icon: ""
            
            ActionButton:
                text: ""
                icon: "icons\calculator.png"

    Screen_Manager:
        id: scrmgr
        Standard:
        Unit_Converter:

